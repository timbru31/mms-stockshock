{
    "compilerOptions": {
        "incremental": true,
        "target": "ES2020",
        "module": "None",
        "lib": ["ES2020", "DOM"],
        "declaration": true,
        "sourceMap": false,
        "outDir": "./dist",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true
    },
    "include": ["src/"],
    "compileOnSave": false
}
